= partial "layouts/doctype"

%head
  -# Meta tags
  = partial "layouts/meta"
  = javascript_include_tag "http://code.jquery.com/jquery.min.js"
  = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/angularjs/1.2.0-rc.2/angular.min.js"
  = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/angularjs/1.2.0-rc.2/angular-resource.min.js"
  = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/angularjs/1.2.0-rc.2/angular-route.js"
  = javascript_include_tag "http://cdn.jsdelivr.net/holder/2.0/holder.min.js"
  = javascript_include_tag "application"
  %link{:href => "http://fonts.googleapis.com/css?family=Roboto+Slab:400,700,300,100", :rel => "stylesheet", :type => "text/css"}
  -# Page title
  %title= current_page.data.title

  -# Stylesheets
  = stylesheet_link_tag "application"

  -# Application icons
  = partial "layouts/icons"

  -# HTML5Shiv
  <!--[if IE]><script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script><![endif]-->

%body{ class: current_page.data.classes || "", "ng-app" => "VcesteApp"}
  = yield

  -# JavaScripts



