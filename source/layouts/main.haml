  = partial "layouts/meta"
  = javascript_include_tag "http://code.jquery.com/jquery.min.js"
  = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/angularjs/1.1.5/angular.min.js"
  = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/angularjs/1.1.5/angular-resource.min.js"
  = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/angularjs/1.1.5/angular-route.min.js"
